<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProductDetailActivity"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_notify"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#D9D9D9"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
            app:titleCentered="true">
            <ImageButton
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                app:backgroundTint="#D9D9D9"
                android:layout_marginLeft="350dp"
                />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_product"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:src="@drawable/bg_splash"
                android:layout_marginLeft="14px"
                android:layout_marginRight="14px"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="Tên sản phẩm"
                    android:textSize="24sp"
                    android:layout_marginTop="12px"
                    android:gravity="left"
                    android:textColor="#000000"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Đánh giá"
                        android:textSize="17sp"

                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:gravity="left"
                        android:text="Đã bán"
                        android:textSize="17sp"

                        android:textColor="#000000"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Giá sản phẩm"
                    android:textSize="24sp"

                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Số lượng "
                        android:textSize="17sp"

                        android:textColor="#000000"/>

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_add"
                        app:backgroundTint="#C1F3CC"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:background="#D9D9D9"
                        android:gravity="center"
                        android:text="1 "
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginTop="5.5dp"/>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_tru"
                        app:backgroundTint="#C1F3CC"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        tools:ignore="TouchTargetSizeCheck"

                        android:text="Thêm vào giỏ hàng"
                        android:textSize="10sp"
                        android:textColor="#FF3A3A"
                        app:backgroundTint="#F3F2F2"
                        />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        app:backgroundTint="#FF3A3A"
                        android:text="Mua ngay"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16px">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Chia sẻ:"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@drawable/image1" />

            </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.1"
        android:gravity="left"
        android:text="Mô tả chi tiết sản phẩm:"
        android:textColor="#16D964"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34px"/>



</LinearLayout>